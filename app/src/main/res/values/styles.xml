<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text Appearances -->
    <style name="TextAppearance.FilmSpace.Hero" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_hero</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="TextAppearance.FilmSpace.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="TextAppearance.FilmSpace.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="TextAppearance.FilmSpace.LargeTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_large_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="TextAppearance.FilmSpace.Toolbar" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.FilmSpace.Subhead" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="TextAppearance.FilmSpace.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.FilmSpace.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="TextAppearance.FilmSpace.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.FilmSpace.Display" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.FilmSpace.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/color_main</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="Widget.FilmSpace.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <style name="Widget.FilmSpace.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="strokeColor">@color/color_main</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="fontFamily">@font/mulish_bold</item>
    </style>

    <!-- EditText Styles -->
    <style name="Widget.FilmSpace.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:padding">@dimen/spacing_default</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.FilmSpace.EditText.Rounded">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:padding">@dimen/spacing_m</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="Widget.FilmSpace.EditText.CustomBackground">
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:layout_height">@dimen/input_height_large</item>
        <item name="android:padding">@dimen/spacing_default</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <!-- CardView Styles -->
    <style name="Widget.FilmSpace.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="Widget.FilmSpace.CardView.Large">
        <item name="cardCornerRadius">@dimen/card_corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation_large</item>
    </style>

    <!-- MovieCard Style -->
    <style name="Widget.FilmSpace.MovieCard" parent="Widget.FilmSpace.CardView">
        <item name="android:layout_width">@dimen/movie_card_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_s</item>
    </style>

</resources>
