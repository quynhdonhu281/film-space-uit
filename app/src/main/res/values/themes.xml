<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FilmSpace_Mobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        
        <!-- Set Mulish as default font -->
        <item name="android:fontFamily">@font/mulish</item>
        <item name="fontFamily">@font/mulish</item>
    </style>

    <style name="CustomBottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/color_main</item>
        <item name="itemTextColor">@color/color_main</item>
    </style>

    <!-- Base application theme -->
    <style name="Theme.FilmSpace_Mobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#7A5AF8</item>
        <item name="colorPrimaryVariant">#5D3FD3</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#7A5AF8</item>
        <item name="colorSecondaryVariant">#5D3FD3</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Theme for Splash and Onboarding (No ActionBar) -->
    <style name="Theme.FilmSpace_Mobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen theme (Optional) -->
    <style name="Theme.FilmSpace_Mobile.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>