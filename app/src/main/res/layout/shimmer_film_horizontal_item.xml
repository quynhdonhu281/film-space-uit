<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Shimmer placeholder for movie poster -->
        <View
            android:id="@+id/posterShimmer"
            android:layout_width="70dp"
            android:layout_height="105dp"
            android:background="#E0E0E0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Shimmer placeholder for movie info -->
        <LinearLayout
            android:id="@+id/movieInfoShimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@id/posterShimmer"
            app:layout_constraintEnd_toStartOf="@id/playButtonShimmer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Shimmer placeholder for title -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0" />

            <!-- Shimmer placeholder for genres -->
            <View
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:background="#F0F0F0" />
        </LinearLayout>

        <!-- Shimmer placeholder for play button -->
        <View
            android:id="@+id/playButtonShimmer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
