<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAppearance="@style/TextAppearance.FilmSpace.Toolbar"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New password"
        android:textAppearance="@style/TextAppearance.FilmSpace.Subhead"
        android:layout_marginStart="@dimen/spacing_default"
        android:layout_marginTop="@dimen/spacing_xl"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_default"
        android:layout_marginTop="@dimen/spacing_s"
        android:gravity="center_vertical"
        android:background="@drawable/rounded"
        android:padding="@dimen/spacing_m">

        <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_lock"/>

        <EditText
            android:id="@+id/editNewPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter new password"
            android:background="@null"
            android:inputType="textPassword"
            android:paddingStart="8dp"/>

        <ImageView
            android:id="@+id/eyeIcon1"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_eye"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:textAppearance="@style/TextAppearance.FilmSpace.Subhead"
        android:layout_marginStart="@dimen/spacing_default"
        android:layout_marginTop="@dimen/spacing_default"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_default"
        android:layout_marginTop="@dimen/spacing_s"
        android:gravity="center_vertical"
        android:background="@drawable/rounded"
        android:padding="@dimen/spacing_m">

        <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_lock"/>

        <EditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Confirm your new password"
            android:background="@null"
            android:inputType="textPassword"
            android:paddingStart="8dp"/>

        <ImageView
            android:id="@+id/eyeIcon2"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_eye"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textAppearance="@style/TextAppearance.FilmSpace.Subhead"
        android:layout_marginStart="@dimen/spacing_default"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/editOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter 6-digit OTP"
            android:inputType="number"
            android:maxLength="6"
            android:background="@drawable/rounded"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnSendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send OTP"
            android:layout_marginStart="@dimen/spacing_s"
            android:backgroundTint="@color/color_main"
            android:textColor="@android:color/white"
            android:paddingHorizontal="@dimen/spacing_default"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnChange"
        style="@style/Widget.FilmSpace.Button.Primary"
        android:layout_width="match_parent"
        android:text="Change Now"
        android:layout_margin="@dimen/spacing_xl"/>
</LinearLayout>
