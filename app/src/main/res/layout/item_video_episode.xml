<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <!-- Episode Number -->
    <TextView
        android:id="@+id/tvEpisodeNumber"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_cast_chip"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical" />

    <!-- Episode Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEpisodeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Vanishing of Will Byers"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvEpisodeDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49 min"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Playing Indicator -->
    <ImageView
        android:id="@+id/ivPlayingIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_play"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:tint="@color/color_main" />

    <!-- Premium Badge -->
    <ImageView
        android:id="@+id/ivPremiumBadge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_premium"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

</LinearLayout>