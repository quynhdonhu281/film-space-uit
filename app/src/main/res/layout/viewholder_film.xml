<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.FilmSpace.MovieCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_card_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/filmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.FilmSpace.Small"
            android:layout_marginStart="@dimen/spacing_s"
            android:layout_marginEnd="@dimen/spacing_s"
            android:layout_marginTop="@dimen/spacing_s"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/filmGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action, Adventure"
            android:textAppearance="@style/TextAppearance.FilmSpace.Caption"
            android:layout_marginStart="@dimen/spacing_s"
            android:layout_marginEnd="@dimen/spacing_s"
            android:layout_marginBottom="@dimen/spacing_s"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>
</androidx.cardview.widget.CardView>